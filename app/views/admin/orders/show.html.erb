<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @admin_order %>

    <%= link_to "Edit Order Details", edit_admin_order_path(@admin_order), class: "mt-2 rounded-lg py-3 px-5 bg-green-900 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Delete This Order", admin_order_path(@admin_order), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-900 font-medium" %>
    </div>
    <%= link_to "Back To Orders", admin_orders_path, class: "ml-2 rounded-lg py-3 px-5 bg-blue-900 text-white inline-block font-medium" %>
  </div>
</div>
